//- This file will show the new book form
extends layout.pug

block content
  h1= title
  //in this form the `action` will send data to /books/new after user submits button to create a new book

  //include errors pug file, this will prevent the creation of a new book without a title and author
  include errors 

  form(action="/books/new", method="post")
    p
      label(for='title') Title
      input#title(name='title', type='text')
    p
      label(for='author') Author
      input#author(name='author', type='text')
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text')
    p
      label(for='year') Year
      input#year(name='year', type='text')
    p
      input(type='submit', value='Create New Book')
    p
      a.button(href='/') Cancel