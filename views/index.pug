extends layout.pug

block content
    h1= title
    p
      a.button(href='/books/new') Create New Book

    each book in books  
      table
        thead
          tr
            th Title
            th Author
            th Genre
            th Year
        tbody
          tr
            td
              a(href= 'book_detail.html' + book.id) 
            td= book.author
            td= book.genre
            td= book.year
          tr
            td
           